@model KullaniciGirisModel
<form asp-action="GirisYap" method="post" class="p-4 w-50 mx-auto">

    <div class="form-group">
        <input type="text" asp-for="@Model.KullaniciAdi" class="form-control" />
        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="password" asp-for="@Model.Sifre" class="form-control" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="@Model.BeniHatirla" class="form-check-input" />
        <label asp-for="BeniHatirla" class="form-check-label">Beni Hatırla</label>

    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info">Giris Yap</button>
    </div>
</form>

@* Sunucu tarafına gitmeden client tarafında işi hallediyor *@
@section Javascript{

    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryValUnob/jquery.validate.unobtrusive.min.js"></script>
}
